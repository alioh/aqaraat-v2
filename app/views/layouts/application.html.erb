<!DOCTYPE html>
<html lang="ar">
	<head>
	  <title>AqaraatV2</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>

	<body>
	<%= render "shared/navbar" %>
	<div class="container">
		<% flash.each do |name, msg| %>
			<div class="alert alert-success text-right" style="direction: rtl;">
				<button type="button" class="close pull-left" data-dismiss="alert">×</button>
				<%= msg %>
			</div>
		<% end %>
		<%= yield %>
	</div>

		<%= render "shared/footer.html.erb" %>

	</body>

	<script>
		$(".button-collapse").sideNav();
		$(".dropdown-button").dropdown();

		$(function() {
		  // Setup drop down menu
		  $('.dropdown-toggle').dropdown();
		 
		  // Fix input element click problem
		  $('.dropdown input, .dropdown label').click(function(e) {
		    e.stopPropagation();
		  });
		});

		j$(‘#dropdown-login’).click(function(e) {
		   e.stopPropagation();
		);
	</script>
</html>
