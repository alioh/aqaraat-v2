<div class="row">
	<div class="col-md-2">
    <div class="btn-group btn-group-vertical">
      <a href=<%= properties_path %> class="btn btn-default">عقاراتك</a>
      <a href=<%= bills_path %> class="btn btn-default">فواتيرك</a>
      <a href=<%= residents_path %> class="btn btn-default">عملاءك</a>
    </div>
  </div>

	<div class="col-md-10" style="direction: rtl;">
		<div class="panel panel-default">
			<div class="panel-heading">
				العقارات
			</div>
			<div class="panel-body">
				<% count = 1 %>
				<table class="table table-striped table-hover text-right" >
					<thead>
								<tr>
									<th class="text-right">#</th>
									<th class="text-right">العنوان</th>
									<th class="text-right">المدينه</th>
									<th class="text-right">الدوله</th>
									<th class="text-right">نوع العقار</th>
									<th class="text-right">الإيجار الشهري</th>
									<th class="text-right">الحاله</th>
									<th class="text-right">رابط</th>
								</tr>
					</thead>
					<% @properties.each do |p| %>
					<tbody>
						<tr>
							<td><%= count %></td>
							<td><%= p.address %></td>
							<td><%= p.city %></td>
							<td><%= p.country %></td>
							<td><%= p.property_type %></td>
							<td><%= p.monthly_rent %></td>
							<td><% if p.vacancy %>
										<%= "شاغر" %>
									<% else %>
										<%= "غير شاغر" %>
									<% end %>
							</td>
							<td><%= link_to "صفحة العقار", edit_property_path(p) %></td>
						</tr>
					</tbody>
					<% count += 1 %>
					<% end %>
					</table>
			</div>
		</div>
	</div>
</div>