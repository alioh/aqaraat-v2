<div class="navbar navbar-inverse">
  <div class="navbar-header pull-left">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <ul class="nav navbar-nav">
      <% if(user_signed_in?) %>
      <li class="dropdown">
        <a href="#" data-target="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b> مرحباً <%= current_user.fullname %></a>
        <ul class="dropdown-menu">
          <li><a href="javascript:void(0)">لوحة التحكم</a></li>
          <li><%= link_to "إدارة الحساب" , edit_user_registration_path %></li>
          <li class="divider"></li>
          <li><%= link_to "تسجيل الخروج" , destroy_user_session_path, :method => :delete %></li>
        </ul>
      </li>
      <% else %>
      <li class="dropdown">
        <a href="#" data-target="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b> تسجيل الدخول</a>
        <ul class="dropdown-menu" style="padding: 5px 10px 5px 10px;">
        <%= form_for("user", :url => user_session_path) do |f| %>
          <li><%= f.text_field :email, :class => "form-control text-right", :placeholder => "البريد الإلكتروني" %></li>
          <li><%= f.text_field :password, :type => "password", :class => "form-control validate text-right", :placeholder => "كلمة المرور" %></li>
          <li><%= f.submit "تسجيل الدخول", :class => "btn btn-inverse" %></li>
          <% end %>
        </ul>
      </li>
      <% end %>
      <li><%= link_to "التسجيل" , new_user_registration_path %></li>
      <li><%= link_to "الرئيسية" , root_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a class="navbar-brand" href="<%= root_path %>">عقارات</a></li>
    </ul>
    
  </div>
</div>
