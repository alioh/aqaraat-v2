<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 pull-right" style="direction: rtl;">
    <p>تسجيل الدخول</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :email, :type => "email", autofocus: true, :class => "form-control validate text-right", :placeholder => "البريد الإلكتروني" %>
      </div>

      <div class="field">
      <%= f.text_field :password, :type => "password", autocomplete: "off", :class => "form-control validate text-right", :placeholder => "كلمة مرور جديده" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %> تذكرني
        </div>
      <% end %>

      <div class="actions pull-right">
        <%= f.submit "تسجيل الدخول", :class => "btn btn-inverse" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>